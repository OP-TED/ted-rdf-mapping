               <NO_EU_PROGR_RELATED/>
            </OBJECT_DESCR>
            <OBJECT_DESCR ITEM="3">
               <TITLE>
                  <P>Prestations d'ordonnancement</P>
               </TITLE>
               <LOT_NO>3</LOT_NO>
               <CPV_ADDITIONAL>
                  <CPV_CODE CODE="79421000"/>
               </CPV_ADDITIONAL>
